<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.index %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <% name = "Chunky Bacon" %>
      <% 100.times do name%>
        <br><%=name%></br>
        <%end%>
    </tr>

    <tr>
      <% tot = 0%>
      <%p = @products.all.uniq{|r| r.name}%>
      The number of unique products are: <%= p.count %>

      <% @products.each {|e|%>
      <% tot = tot + e.price}%>
      <br> The average of all products is: <%=tot/@products.count%></br>

      <% sum = 0%>
      <% @products.each { |r| sum+= r.stock_quantity}%>
      Sum of all quantities are: <%= sum %>
    </tr>




  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
